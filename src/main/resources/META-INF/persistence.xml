<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="application" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.jupiter.mumscrum.entity.Employee</class>
		<class>com.jupiter.mumscrum.entity.Product</class>
		<class>com.jupiter.mumscrum.entity.ReleaseBacklog</class>
		<class>com.jupiter.mumscrum.entity.Role</class>
		<class>com.jupiter.mumscrum.entity.Sprint</class>
		<class>com.jupiter.mumscrum.entity.Status</class>
		<class>com.jupiter.mumscrum.entity.UserStory</class>
		<class>com.jupiter.mumscrum.entity.Worklog</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>

</persistence>
